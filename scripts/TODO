DEB_HOST_GNU_CPU  ?= $(call vafilt,$(DPKG_VARS),DEB_HOST_GNU_CPU)

p11_no_cpus := or1k
ifneq (,$(findstring $(DEB_HOST_ARCH_CPU),$(p11_no_cpus)))
  DEB_CONFIGURE_EXTRA_FLAGS := $(DEB_CONFIGURE_EXTRA_FLAGS) --without-p11-kit
endif

